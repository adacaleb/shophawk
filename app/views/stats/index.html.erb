<p style="color: green"><%= notice %></p>



<div id="stats">
  <% @stats.each do |stat| %>
    <%= render stat %>
    <p>
      <%= link_to "Show this stat", stat %>
    </p>
  <% end %>
</div>
<div class="text-white">
  <h1>Stats</h1>
  <div class="row">
    <div class="col-6">
      HI
    </div>
    <div class="col-6" style="background-color: #1A212C; height: 50vh;  border-radius: 25px; padding: 20px;">
      <h2 class="text-center">Current checkbook balance: $<%= @balance.round(2) %></h2>
      <div style="overflow-y: scroll; height: 40vh;">
        <table class="table table-dark table-hover table-sm align-middle">
          <thead>
            <tr>
              <th width=25% scope="col">Source</th>
              <th width=25% scope="col">Customer/Supplier</th>
              <th width=25% scope="col">Date</th>  
              <th width=25% scope="col">Amount</th>
            </tr>
          </thead>
          <tbody>
            <% @txs.each do |payment| %>
              <tr>
                <td><%= payment[:Reference] %></td>
                <td><%= payment[:Source] %></td>
                <td><%= payment[:date] %></td>
                <td><%= payment[:amount] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>

<%= link_to "New stat", new_stat_path %>
