<!doctype html>
<html lang="en">





  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ShopHawk</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
 <!--   <link rel="stylesheet" href="bootstrap/css/bootstrap.min.css"> -->
 <!--   <link rel="stylesheet" type="text/css" href="my_style.css">   -->
 <link rel="icon" type="image/png" href="/assets/favicon.png">
    <%= javascript_importmap_tags %>
  </head>


  

  <body>
    <%= render 'home/header' %>   <!-- embedded ruby tag. displays the header page within this page to keep things seperate -->
     
      <div class="bg-image d-flex justify-content-center"
        style="
        background-image: url(<%= asset_path 'logos/background.webp' %> );
        min-height: 1080px;  
        background: static;
        background-size: 100% 100%;
        background-repeat: no-repeat;
        background-attachment: fixed;

        ">
        <div class="container">
            <br/>
            <% if notice %>
              <%= render 'layouts/alerts' %>
            <% end %>
            <%= yield %>                <!-- yields to the body of whatever page we are displaying.  can move this yeild anywhere in this file -->
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

 

  <div id="footer">scroll if needed </div>
    </body>
  </div>   
</html>


<!-- application.html.erb is the main template of the entire website -->