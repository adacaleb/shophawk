<div class="container text-left">
  <div class="row" >
    <div class="col" >
      <%= form.label :part_number, style: "display: block" %>
      <%= form.text_field :part_number, class:"form-control", :onclick => 'this.select();', :autofocus => true %>
    </div>
    <div class="col">
      <%= form.label :description, style: "display: block" %>
      <%= form.text_field :description, class:"form-control" %>
    </div>
  </div>
  </br>

  <div class="row">
    <div class="col">
      <%= form.label :balance, style: "display: block" %>
      <%= form.text_field :balance, class:"form-control" %>
    </div>
    <div class="col">
      <%= form.label "Minumum To send alert", style: "display: block" %>
      <%= form.text_field :minumum, class:"form-control" %>
    </div>
  </div>
  </br>
  <div class="row">
    <div class="col">
      <%= form.label :location, style: "display: block" %>
      <%= form.text_field :location, class:"form-control" %>
    </div>
    <div class="col">
      <%= form.label "Employee that Purchases" , style: "display: block" %>
      <%= form.text_field :buyer, class:"form-control" %>
    </div>
  </div>
    </br>
<div class="row">
  <div class="col">
    <%= form.label "Purchasing website", style: "display: block" %>
    <%= form.text_field :vendor, class:"form-control" %>
