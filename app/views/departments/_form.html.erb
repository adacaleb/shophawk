<%= form_with(model: department) do |form| %>
  <% if department.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(department.errors.count, "error") %> prohibited this department from being saved:</h2>
      <ul>
        <% department.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card text-bg-light mb-3">
    <div class="card-header my-auto">
      <div class="row align-items-center">
        <div class="col"><%= form.text_field :department, class: "form-control", :autofocus => true, placeholder: "Deparment Name"%></div>
        <div class="col"><%= form.submit class: "btn btn-primary" %></div>
        <div class="col"><%= link_to "Cancel", runlists_path, class: "btn btn-secondary" %></div>
      </div>
      </br>
    </div>
    <div class="card-body">   
      <div class="form-5-col form-check form-switch">
        <%= form.collection_check_boxes(:workcenter_ids, Workcenter.all, :id, :workCenter) do |b| %>
          <li>
            <%= b.check_box(class: "form-check-input", type: "checkbox", role: "switch") %>
            <%= b.text %>
          </li>
        <% end %>
      </div>
    </div>
  </div>
<% end %>


