<div class="card text-bg-dark mb-3" style=" height: 98vh" >
	<div class="card-header text-center ">
    <h3>Time Off Next Week</h3>
    <h3><%= @nextWeekStart %> to <%= @nextWeekEnd %></h3>
  </div>      
  <div class="card text-bg-dark text-center mb-3">
    <div class="card-body">
      <table style="table-layout:auto; white-space: nowrap; border-color: white" class="table table-dark align-middle table table-bordered text-center" >
        <thead>
          <tr style="font-size: 2vw">
            <th scope="col">Monday</th>
            <th scope="col">Tuesday</th>
            <th scope="col">Wednesday</th>
            <th scope="col">Thursday</th>
            <th scope="col">Friday</th>
          </tr>
        </thead>
        <tbody style="font-size: 2vw;">
          <% @day = 0 %>
          <%= render "slideshows/timeOffRow2" %>
          <% @day = 1 %>
          <%= render "slideshows/timeOffRow2" %>
          <% @day = 2 %>
          <%= render "slideshows/timeOffRow2" %>
          <% @day = 3 %>
          <%= render "slideshows/timeOffRow2" %>
          <% @day = 4 %>
          <%= render "slideshows/timeOffRow2" %>
          <% @day = 5 %>
          <%= render "slideshows/timeOffRow2" %>
          <% @day = 6 %>
          <%= render "slideshows/timeOffRow2" %>
          <% @day = 7 %>
          <%= render "slideshows/timeOffRow2" %>
        </tbody>
      </table>
    </div>
  </div>     
</div>